[Unit]
Description=GitHub Webhook Server for KIT Website
After=network.target

[Service]
Type=simple
User=root
WorkingDirectory=/srv/kit-website
Environment="WEBHOOK_PORT=9000"
Environment="WEBHOOK_SECRET=your-secret-here"
ExecStart=/usr/bin/node /srv/kit-website/webhook-server.js
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target
